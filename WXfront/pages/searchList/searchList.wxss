page{
  background-color:#f1efef;
}
.content{
  display: flex;
  margin: 20rpx;
}
.left{
  width:49%;
  margin-right: 2%;
}
.right{
  width: 49%;
}
.item image{
  width: 100%;
}
.product-item{
  border-radius: 10rpx;
  background-color: white;

  overflow: hidden;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.product-item image{
  width: 100%;
}
.product-item .product-title{
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 15rpx;
}
.product-item .product-price{
  color: #f20c59;
  font-weight: 700;
  font-size: 32rpx;
  padding: 0 20rpx;
}
view.search {
  /* 设置效果为“吸顶” */
  position: sticky;
  /* 吸顶的“位置” */
  top: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 98rpx;
  /* margin-top: 10px; */
  /* margin-left: 5%; */
  background: #eeeee9;
  align-items: center;
}
.btn{
  margin-left: 0rpx;
  justify-content: right;
  flex-direction: row;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  color:#ffffff;
  background-color: #ff8717;
  height: 70rpx;
  width: 150rpx;
  border-bottom-right-radius: 35rpx;
  border-top-right-radius: 35rpx;
  border-bottom-left-radius: 0px;
  border-top-left-radius: 0px;
}
.input{
  height: 70rpx;
  align-items: center;
  justify-content: left;
  padding-left: 35rpx;
}
view.searchItem {
  display: flex;
  width: 560rpx;
  background: rgb(255, 254, 254);
  flex-direction: row;
  border-radius: 10rpx;
  /* margin-right: 20rpx; */
  margin-left: 20rpx;
  height: 70rpx;
  /* 圆角 */
  border-bottom-left-radius: 35rpx;
  border-top-left-radius: 35rpx;
  border-bottom-right-radius: 0rpx;
  border-top-right-radius: 0rpx;
}
view.searchItem icon {
  height: 40rpx;
  width: 42rpx;
  align-self: center;
  margin-top: 5px;
  margin-left: 10rpx;
  
}
view.searchItem input {
  flex: 1;
  font-size: 30rpx;
}

.shop-item{
  display: flex;
  padding: 15rpx;
  border: 1rpx solid #ffffff;
  border-radius: 8rpx;
  margin:15rpx;
  box-shadow: 1rpx 1rpx 15rpx #dddddd;
}
.thumb image{
  width: 250rpx;
  height:250rpx;
  /* 两图片无间隙 */
  display:block;
  margin-right: 15rpx;
}

.info{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}

.shop-title{
  font-weight: bold;
}


.history-box {
  padding: 0 5px;
}

.history-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  font-size: 13px;
  border-bottom: 1px solid #efefef;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.uni-tag {
  margin-top: 5px;
  margin-right: 5px;
}
.search-content {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #8D8D8D;
}
.search-content .search-item {
  margin: 1%;
  padding: 6rpx 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
