view.search {
  /* 设置效果为“吸顶” */
  position: sticky;
  /* 吸顶的“位置” */
  top: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 98rpx;
  /* margin-top: 10px; */
  /* margin-left: 5%; */
  background: #eeeee9;
  align-items: center;
}
.btn{
  margin-left: 0rpx;
  justify-content: right;
  flex-direction: row;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  color:#ffffff;
  background-color: #ff8717;
  height: 70rpx;
  width: 150rpx;
  border-bottom-right-radius: 35rpx;
  border-top-right-radius: 35rpx;
  border-bottom-left-radius: 0px;
  border-top-left-radius: 0px;
}
.input{
  height: 70rpx;
  align-items: center;
  justify-content: left;
  padding-left: 35rpx;
}
view.searchItem {
  display: flex;
  width: 560rpx;
  background: rgb(255, 254, 254);
  flex-direction: row;
  border-radius: 10rpx;
  /* margin-right: 20rpx; */
  margin-left: 20rpx;
  height: 70rpx;
  /* 圆角 */
  border-bottom-left-radius: 35rpx;
  border-top-left-radius: 35rpx;
  border-bottom-right-radius: 0rpx;
  border-top-right-radius: 0rpx;
}
view.searchItem icon {
  height: 40rpx;
  width: 42rpx;
  align-self: center;
  margin-top: 5px;
  margin-left: 10rpx;
  
}
view.searchItem input {
  flex: 1;
  font-size: 30rpx;
}


.name{
  width: 30%;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  font-size: 40rpx;
  padding-right: 15rpx;
  padding-left: 15rpx;
}




.scroll-view_H{
  height: 40px;
  display: flex;
  flex-direction: row;
  margin-left:5px; 
}
.select{
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
  font-weight: bold;
}
.normal{
  width:40px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
}
.item{
  margin:10px;
}
.title{
  margin-left:10px;
  color: #444444;
  font-weight: bold;
  font-size: 16px;
  padding-top: 10rpx;
}
.pic image{
  margin-right: 10px;
}
.info{
  width:120%;
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999999;
  /* margin-left:137rpx; */
}
.desc{
  width:90%;
  margin-top:13px;
}
.desc text{
  margin-top:20px;
  margin-left: 10px;
  margin-right: 10px;
}
.opr{
  width:10%;
}
.opr view{
  width:17px;
  height: 12px;
  border:1px solid #cccccc;
  line-height: 10px;
  text-align: center;
  border-radius: 5px;
}
.hr{
  border:1px solid #cccccc;
  opacity: 0.2;
  margin-top:24px;
}
.write{
  width: 50%;
  margin-left: 10px;
  border-radius: 15px;
  font-size: 13px;
}
.big{
  width:90%;
  height:60px;
}


.comment{
  width:100%;
  height: 60px;
  background-color: #F4F5F7;
  position: fixed;
  bottom: 0px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.find{
  width: 50px;
  height: 25px;
  border: 0 solid #ffffff;
  font-size: 22rpx;
  padding: 0px;

}
.border{
  display:flex;
  flex-direction: row;
  margin-top: 15px;
  width:90%;
  height:60px;
  margin-left:5%;
  margin-right:5%;
