/* // 默认样式 */
button {
position:relative;
display:block;
margin-left:0rpx;
margin-right:30px;
padding-left:0px;
padding-right:20px;
box-sizing:border-box;
font-size:18px;
text-align:left;
text-decoration:none;
line-height:1;
border-radius:5px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000000;
background-color:#fff;
}
/* 清除按钮伪元素的边框效果 */
button[class="li"]::after {
  border: 0;
}
  /* 列表详情 */
  
  .li{
    background-color: #fff;
    /* display: flex;
