      <text class="placeholder" bindtap="gotoSearch" style="color: gray;font-family: LiSu;">搜索</text>
    </view>
    <view class="goto" bindtap="gotoSearch">
    <image class="image" src='cloud://cloud1-3gybjakse2e4eef5.636c-cloud1-3gybjakse2e4eef5-1310443580/Photo/search.png'></image>
    </view>
  </view>
  
